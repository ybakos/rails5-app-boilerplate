= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  %h2 Personal Information
  .form-group
    = f.label :first_name
    = f.text_field :first_name, class: 'form-control'
  .form-group
    = f.label :last_name
    = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  - if current_user.admin?
    %h3.mt-5 Role and Status
    .form-group
      = f.label :role
      = f.select :role, User.roles.keys.map {|k| [k.capitalize, k]}, {}, class: 'form-control'
    .form-group
      = f.check_box :active
      = f.label :active
  = f.submit 'Save', class: 'form-control btn btn-primary'
  %h3.mt-5 Update Password
  .form-group
    = f.label :password
    = f.text_field :password, class: 'form-control'
    %small{class: 'form-text text-muted'} (6 characters minimum)
  .form-group
    = f.label :password_confirmation
    = f.text_field :password_confirmation, class: 'form-control'
  = f.submit 'Save new password', class: 'form-control btn btn-secondary'
